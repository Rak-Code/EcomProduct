rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read reviews
    match /reviews/{reviewId} {
      allow read: if true;
      // Only allow authenticated users to create reviews
      allow create: if request.auth != null;
      // Allow users to edit or delete their own reviews
      allow update: if (
        request.auth != null && (
          // Allow users to edit their own reviews
          resource.data.userId == request.auth.uid ||
          // Allow incrementing helpful counter
          (
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['helpful']) &&
            request.resource.data.helpful == resource.data.helpful + 1
          )
        )
      );
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
